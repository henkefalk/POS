package DBHandler;

import java.util.*;

import model.ItemIdentifierDTO;



public class ItemCatalog {
	
	 HashMap <ItemIdentifierDTO, Item> itemCatalog = new HashMap <ItemIdentifierDTO, Item>();
	
	 /**
	  * Creates a HashMap with the Items the store has for sale
	  */
	 public ItemCatalog(){
	 Item cucumber = new Item("Cucumber", 15, new ItemIdentifierDTO(1));
	 itemCatalog.put(cucumber.getItemIdentifier(), cucumber);
	 
	 Item lemon = new Item("Lemon", 6, new ItemIdentifierDTO(2));
	 itemCatalog.put(lemon.getItemIdentifier(), lemon);
	 
	 Item apple = new Item("Apple", 10, new ItemIdentifierDTO(3));
	 itemCatalog.put(apple.getItemIdentifier(), apple);
	 
	 Item watermelon = new Item("Watermelon", 33, new ItemIdentifierDTO(4));
	 itemCatalog.put(watermelon.getItemIdentifier(), watermelon);
	 
	 Item kiwi = new Item("Kiwi", 5, new ItemIdentifierDTO(5));
	 itemCatalog.put(kiwi.getItemIdentifier(), kiwi);
	  
	 }
}
